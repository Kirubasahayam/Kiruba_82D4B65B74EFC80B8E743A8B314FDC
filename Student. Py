class student:
    def init__(self, name, roll_no, cgpa):
         self. name = name
         self. roll_no= roll_no
         self. cgpa = cgpa
    def sort_students(student_list) :
sorted(student_list, key = lambda student:student.cgpa, reverse = true)
      return sorted_students

#created a list of student objects
students =[student("Alice", "A001", 3.8) student("Bob", "B002",3.6) student ("Charlie", " c003",3.9) student (â€David ", " D004", 3.7) ]

#sort the students by CGPA sorted_students = sort_students (students) 

#print the sorted list for student in sorted_students:
         print(""Name:{student.name}, Roll_no:{student.roll_no}, CGPA:{student.cgpa}") 
